@article{desroziers/1997,
    author={Gérald  Desroziers},
    title={\textbf{{A} {C}oordinate {C}hange for {D}ata {A}ssimilation in {S}pherical {G}eometry of {F}rontal {S}tructures.}},
    journal={Monthly Weather Review},
    volume={125},
