@article{adleretal/2003,
    author = {Robert F.  Adler  and  George J.  Huffman  and  Alfred  Chang  and  Ralph  Ferraro  and  Ping-Ping  Xie  and  John  Janowiak  and  Bruno  Rudolf  and  Udo  Schneider  and  Scott  Curtis  and  David  Bolvin  and  Arnold  Gruber  and  Joel  Susskind  and  Philip  Arkin  and  Eric  Nelkin },
    title = {\textbf{{T}he {V}ersion--{2} {G}lobal {P}recipitation {C}limatology {P}roject ({GPCP}) {M}onthly {P}recipitation {A}nalysis (1979--{P}resent).}},
    journal = {Journal of Hydrometeorology},
    volume = {4},
